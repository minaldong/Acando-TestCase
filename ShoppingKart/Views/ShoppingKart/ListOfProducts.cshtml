@using ShoppingKart.Models

@model PricingModel

<div class="row">
	<div class="col-xs-8">
		<div class="table-responsive">
			<table id="product-list" class="table table-striped table-hover">
				<thead>
					<tr>
						<th data-type="html">Name</th>
						<th data-type="html">Quantity</th>

					</tr>
				</thead>
				<tbody>

					@{ int rowCount = 0;}
					@if (Model.ListOfProducts != null)
					{
						foreach (Product product in Model.ListOfProducts)
						{
							<tr>
								<td>
									@Html.Hidden("ListOfProducts[" + rowCount + "].ProductName", product.ProductName)
									@product.ProductName
								</td>
								<td>
									@Html.Hidden("ListOfProducts[" + rowCount + "].ProductQuantity", product.ProductQuantity)
									@product.ProductQuantity
								</td>
							</tr>
							rowCount++;
						}
					}

				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-2">
		<div class="form-inline">
			<button type="button" id="total" class="btn btn-primary">Total</button>
			<label>@Model.Total</label>
		</div>
	</div>
	<div class="col-md-2">
		<button type="button" id="reset" class="btn btn-primary">Reset</button>
	</div>
</div>